<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Helvetica, Arial, sans-serif" color="#333333" />
      <mj-text font-size="16px" line-height="1.5" />
      <mj-button background-color="#1a73e8" color="#ffffff" border-radius="4px" padding="12px 20px" />
      <mj-section padding="0" />
      <mj-column padding="0" />
    </mj-attributes>

    <mj-preview>Reset your password</mj-preview>

    <mj-style inline="inline">
      .muted { color: #777 !important; }
      .footer-link a { color: #999 !important; text-decoration: none; }
      .code { font-family: "SFMono-Regular", Menlo, Consolas, "Liberation Mono", monospace; background:#f6f8fa; padding:2px 6px; border-radius:4px; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f4f4f4">
    <!-- Header -->
    <mj-section background-color="#ffffff" padding="20px 24px 10px">
      <mj-column>
        <mj-image src="https://yourdomain.com/logo.png" alt="Company Logo" width="150px" padding="0 0 8px" />
      </mj-column>
    </mj-section>

    <!-- Title -->
    <mj-section background-color="#ffffff" padding="0 24px">
      <mj-column>
        <mj-text font-size="20px" font-weight="bold">Reset your password</mj-text>
      </mj-column>
    </mj-section>

    <!-- Body -->
    <mj-section background-color="#ffffff" padding="8px 24px 20px">
      <mj-column>
        <mj-text>Hi {{name}},</mj-text>

        <mj-text>
          We received a request to reset the password for the account associated with
          <strong>{{email}}</strong>. Click the button below to choose a new password.
        </mj-text>

        <mj-button href="{{resetUrl}}" align="left">
          Reset Password
        </mj-button>

        <mj-text class="muted" font-size="14px">
          This link will expire in {{expiresIn}}. If you did not request a password reset,
          you can safely ignore this email and your password will remain unchanged.
        </mj-text>

        <!-- Optional fallback reset code, if your flow supports it -->
        <mj-raw><!-- remove this block if you don't use codes --></mj-raw>
        <mj-text class="muted" font-size="14px">
          Or paste this code into the reset form: <span class="code">{{resetCode}}</span>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Divider -->
    <mj-section background-color="#ffffff" padding="0 24px">
      <mj-column>
        <mj-divider border-width="1px" border-color="#eeeeee" />
      </mj-column>
    </mj-section>

    <!-- Tips / Security -->
    <mj-section background-color="#ffffff" padding="12px 24px 20px">
      <mj-column>
        <mj-text font-size="14px" class="muted">
          Security tip: Only reset your password from devices and browsers you trust. If you didn’t
          try to sign in, we recommend changing your password from your profile page after logging in.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#ffffff" padding="16px 24px 24px">
      <mj-column>
        <mj-text font-size="12px" align="center" class="footer-link">
          © {{year}} Your Company, Inc. · <a href="{{supportUrl}}">Support</a>
          · <a href="{{privacyUrl}}">Privacy</a> · <a href="{{unsubscribeUrl}}">Unsubscribe</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section padding="12px">
      <mj-column>
        <mj-text font-size="10px" align="center" color="#aaaaaa">
          This is an automated message, please do not reply.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
